// Niri Configuration - Frost Peak Theme
// Full rice: gaps, smooth animations, ice blue accents
// Toggle with Super+Shift+V

// ============================================================================
// INPUT CONFIGURATION
// ============================================================================

input {
    keyboard {
        xkb {
            layout "us"
        }
        repeat-delay 300
        repeat-rate 50
    }

    touchpad {
        tap
        dwt
        natural-scroll
        accel-speed 0.0
        accel-profile "adaptive"
    }

    mouse {
        accel-speed 0.0
        accel-profile "adaptive"
    }

    focus-follows-mouse
    workspace-auto-back-and-forth
}

// ============================================================================
// OUTPUT CONFIGURATION
// ============================================================================

// Samsung LC49G95T (49" super ultrawide) - Main display
output "DP-3" {
    mode "5120x1440@119.999"
    scale 1.0
    position x=0 y=0
}

// Samsung LC34G55T (34" ultrawide) - Vertical, right of main
output "DP-2" {
    mode "3440x1440@99.982"
    scale 1.0
    transform "90"
    position x=5120 y=0
}

// Laptop display (if connected)
output "eDP-1" {
    scale 1.0
}

// ============================================================================
// NAMED WORKSPACES
// ============================================================================

// DP-2 (vertical monitor) workspaces - windows here open floating by default
workspace "vertical" {
    open-on-output "DP-2"
}

workspace "vertical-2" {
    open-on-output "DP-2"
}

// ============================================================================
// LAYOUT CONFIGURATION
// ============================================================================

layout {
    gaps 12
    background-color "transparent"

    center-focused-column "never"

    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }

    default-column-width { proportion 0.5; }

    // Frost Peak focus ring - Ice blue accent
    focus-ring {
        width 1
        active-color "#38bdf8"
        inactive-color "#262a3a"
    }

    border {
        width 1
        active-color "#38bdf8"
        inactive-color "#141620"
    }
}

// ============================================================================
// SPAWN AT STARTUP
// ============================================================================

// Noctalia Shell (replaces waybar, mako, fuzzel, swaylock, swayidle, swaybg)
spawn-at-startup "sh" "-c" "sleep 2 && noctalia-shell"
spawn-at-startup "sh" "-c" "wl-paste --watch cliphist store"

// Workaround: toggle DP-2 after startup to fix black screen from greetd handoff
spawn-at-startup "sh" "-c" "sleep 2 && niri msg output DP-2 off && sleep 1 && niri msg output DP-2 on"

// ============================================================================
// XWAYLAND (for legacy X11 apps like Zoho WorkDrive)
// ============================================================================

spawn-at-startup "xwayland-satellite"

// ============================================================================
// ENVIRONMENT VARIABLES
// ============================================================================

environment {
    QT_QPA_PLATFORM "wayland"
    QT_WAYLAND_DISABLE_WINDOWDECORATION "1"
    ELECTRON_OZONE_PLATFORM_HINT "auto"
    MOZ_ENABLE_WAYLAND "1"
    XCURSOR_THEME "Bibata-Modern-Ice"
    XCURSOR_SIZE "24"
    DISPLAY ":0"  // For XWayland apps (Steam, etc.)
    QS_ICON_THEME "Papirus-Dark"
}

// ============================================================================
// PREFER NO CSD
// ============================================================================

prefer-no-csd

// ============================================================================
// SCREENSHOT PATH
// ============================================================================

screenshot-path "~/Pictures/Screenshots/Screenshot from %Y-%m-%d %H-%M-%S.png"

// ============================================================================
// ANIMATIONS
// ============================================================================

animations {
    slowdown 1.0

    window-open {
        duration-ms 200
        curve "ease-out-expo"
    }

    window-close {
        duration-ms 150
        curve "ease-out-cubic"
    }

    window-resize {
        duration-ms 150
        curve "ease-out-cubic"
    }

    window-movement {
        duration-ms 200
        curve "ease-out-expo"
    }

    workspace-switch {
        duration-ms 250
        curve "ease-out-expo"
    }

    horizontal-view-movement {
        duration-ms 250
        curve "ease-out-expo"
    }

    config-notification-open-close {
        duration-ms 200
        curve "ease-out-cubic"
    }
}

// ============================================================================
// NOCTALIA SHELL RULES
// ============================================================================

// Rounded corners for all windows (Noctalia requirement)
window-rule {
    geometry-corner-radius 12
    clip-to-geometry true
}

// Noctalia wallpaper layer
layer-rule {
    match namespace="^noctalia-wallpaper*"
    place-within-backdrop true
}

// Noctalia notifications
debug {
    honor-xdg-activation-with-invalid-serial
    render-drm-device "/dev/dri/renderD128"
}

// ============================================================================
// WINDOW RULES
// ============================================================================

// Utility windows - fixed sizes
window-rule {
    match app-id="pavucontrol"
    default-column-width { fixed 600; }
}

window-rule {
    match app-id="org.gnome.Calculator"
    default-column-width { fixed 400; }
}

window-rule {
    match app-id="blueman-manager"
    default-column-width { fixed 500; }
}

window-rule {
    match app-id="nm-connection-editor"
    default-column-width { fixed 600; }
}

// File dialogs - open floating
window-rule {
    match title="Open File"
    open-floating true
}

window-rule {
    match title="Save File"
    open-floating true
}

window-rule {
    match title="Open Folder"
    open-floating true
}

// Picture-in-picture - floating and sticky
window-rule {
    match title="Picture-in-Picture"
    open-floating true
    default-floating-position x=20 y=20 relative-to="bottom-right"
}

// Steam windows
window-rule {
    match app-id="steam" title="Friends List"
    default-column-width { fixed 300; }
}

window-rule {
    match app-id="steam" title="Steam Settings"
    open-floating true
}

// Bitwarden popup
window-rule {
    match app-id="Bitwarden"
    default-column-width { fixed 400; }
}

// Thunar file manager
window-rule {
    match app-id="thunar"
    default-column-width { fixed 900; }
}

// Webapps - open floating on vertical monitor (DP-2)
window-rule {
    match app-id=r"webapp-.*"
    open-on-output "DP-2"
    open-floating true
    default-column-width { fixed 1100; }
    default-window-height { fixed 900; }
}


// Browsers - open on workspace 1
window-rule {
    match app-id="brave-browser"
    open-on-workspace "1"
}

window-rule {
    match app-id="firefox"
    open-on-workspace "1"
}

window-rule {
    match app-id="chromium-browser"
    open-on-workspace "1"
}

// Dev apps - open on workspace 3
window-rule {
    match app-id="code"
    open-on-workspace "3"
}

window-rule {
    match app-id="Code"
    open-on-workspace "3"
}

window-rule {
    match app-id="kitty"
    open-on-workspace "3"
}

window-rule {
    match app-id="Alacritty"
    open-on-workspace "3"
}

window-rule {
    match app-id="obsidian"
    open-on-workspace "3"
}

// Zoho WorkDrive
window-rule {
    match app-id="zohoworkdrivets"
    default-column-width { fixed 400; }
}

// Streamdeck UI
window-rule {
    match app-id="streamdeck"
    default-column-width { fixed 800; }
}

// ============================================================================
// KEYBINDINGS - OMARCHY STYLE + TUI APPS
// ============================================================================

binds {
    // ========================================================================
    // NAVIGATION
    // ========================================================================

    Mod+Space { spawn "noctalia-shell" "ipc" "call" "launcher" "toggle"; }
    Mod+W { close-window; }
    Mod+F { fullscreen-window; }
    Mod+O { toggle-window-floating; }
    Mod+Alt+F { maximize-column; }

    // Workspaces
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }

    Mod+Tab { focus-workspace-down; }
    Mod+Shift+Tab { focus-workspace-up; }

    Mod+Shift+1 { move-window-to-workspace 1; }
    Mod+Shift+2 { move-window-to-workspace 2; }
    Mod+Shift+3 { move-window-to-workspace 3; }
    Mod+Shift+4 { move-window-to-workspace 4; }
    Mod+Shift+5 { move-window-to-workspace 5; }
    Mod+Shift+6 { move-window-to-workspace 6; }
    Mod+Shift+7 { move-window-to-workspace 7; }
    Mod+Shift+8 { move-window-to-workspace 8; }
    Mod+Shift+9 { move-window-to-workspace 9; }

    // Focus (Arrow + Vim)
    Mod+Left  { focus-column-left; }
    Mod+Down  { focus-window-down; }
    Mod+Up    { focus-window-up; }
    Mod+Right { focus-column-right; }
    Mod+H { focus-column-left; }
    Mod+J { focus-window-down; }
    Mod+K { focus-window-up; }
    Mod+L { focus-column-right; }

    // Move windows
    Mod+Shift+Left  { move-column-left; }
    Mod+Shift+Down  { move-window-down; }
    Mod+Shift+Up    { move-window-up; }
    Mod+Shift+Right { move-column-right; }
    Mod+Shift+H { move-column-left; }
    Mod+Shift+J { move-window-down; }
    Mod+Shift+K { move-window-up; }
    Mod+Shift+L { move-column-right; }

    // Resize
    Mod+Equal { set-column-width "+10%"; }
    Mod+Minus { set-column-width "-10%"; }
    Mod+Shift+Equal { set-window-height "+10%"; }
    Mod+Shift+Minus { set-window-height "-10%"; }

    // Column grouping
    Mod+T { consume-or-expel-window-left; }
    Mod+G { consume-window-into-column; }
    Mod+Alt+G { expel-window-from-column; }

    // Send window to vertical monitor (DP-2) as floating
    Mod+Ctrl+Period { spawn "sh" "-c" "niri msg action move-window-to-monitor DP-2 && sleep 0.1 && niri msg action move-window-to-floating && niri msg action set-column-width fixed:1100 && niri msg action set-window-height fixed:900"; }

    // ========================================================================
    // LAUNCHING APPS
    // ========================================================================

    Mod+Return { spawn "kitty"; }
    Mod+Shift+B { spawn "brave"; }
    Mod+Shift+F { spawn "thunar"; }
    Mod+Shift+M { spawn "spotify"; }
    Mod+Shift+N { spawn "code"; }
    Mod+Shift+O { spawn "obsidian"; }
    Mod+Shift+Slash { spawn "bitwarden-desktop"; }
    Mod+Shift+D { spawn "kitty" "lazygit"; }
    Mod+Shift+U { spawn "firefox" "-P"; }
    Mod+Ctrl+T { spawn "kitty" "btop"; }

    // ========================================================================
    // TUI APPS
    // ========================================================================

    // Yazi file manager
    Mod+E { spawn "kitty" "yazi"; }

    // Cava audio visualizer
    Mod+Shift+C { spawn "kitty" "cava"; }

    // ncspot (Spotify TUI)
    Mod+Shift+P { spawn "kitty" "ncspot"; }

    // Lazydocker
    Mod+Ctrl+D { spawn "kitty" "lazydocker"; }

    // ========================================================================
    // MODE TOGGLE
    // ========================================================================

    // Toggle Vibe/Focus mode
    Mod+Shift+V { spawn "sh" "-c" "~/.local/bin/toggle-mode"; }

    // Toggle night mode (blue light filter)
    Mod+Ctrl+N { spawn "sh" "-c" "~/.local/bin/night-mode toggle"; }

    // ========================================================================
    // SYSTEM CONTROLS
    // ========================================================================

    Mod+Ctrl+A { spawn "pavucontrol"; }
    Mod+Ctrl+B { spawn "blueman-manager"; }
    Mod+Ctrl+W { spawn "nm-connection-editor"; }
    Mod+Ctrl+L { spawn "noctalia-shell" "ipc" "call" "lockScreen" "lock"; }

    // Noctalia panels
    Mod+N { spawn "noctalia-shell" "ipc" "call" "notifications" "toggleHistory"; }
    Mod+C { spawn "noctalia-shell" "ipc" "call" "controlCenter" "toggle"; }
    Mod+Escape { quit; }
    Mod+Ctrl+R { spawn "niri" "msg" "action" "load-config-file"; }

    // ========================================================================
    // SCREENSHOTS & CLIPBOARD
    // ========================================================================

    Mod+Shift+S { spawn "screenshot"; }
    Mod+Ctrl+S { spawn "screenshot" "--file"; }
    Print { spawn "screenshot"; }
    Mod+Print { spawn "screenshot" "full"; }
    Mod+Ctrl+V { spawn "noctalia-shell" "ipc" "call" "launcher" "clipboard"; }

    // ========================================================================
    // MEDIA KEYS
    // ========================================================================

    XF86AudioRaiseVolume { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "5%+"; }
    XF86AudioLowerVolume { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "5%-"; }
    XF86AudioMute        { spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SINK@" "toggle"; }
    XF86AudioMicMute     { spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SOURCE@" "toggle"; }
    XF86AudioPlay  { spawn "playerctl" "play-pause"; }
    XF86AudioPause { spawn "playerctl" "play-pause"; }
    XF86AudioNext  { spawn "playerctl" "next"; }
    XF86AudioPrev  { spawn "playerctl" "previous"; }

    // ========================================================================
    // MOUSE SCROLLING
    // ========================================================================

    Mod+WheelScrollDown { focus-workspace-down; }
    Mod+WheelScrollUp   { focus-workspace-up; }
    Mod+Shift+WheelScrollDown { move-window-to-workspace-down; }
    Mod+Shift+WheelScrollUp   { move-window-to-workspace-up; }
}
